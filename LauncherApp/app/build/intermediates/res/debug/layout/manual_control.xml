<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ManualControl" >



    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:columnCount="2"
        android:rowCount="6">

        <Button
            android:id="@+id/btnBallLoaderServoOpenO"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Ball Loader&#10;Servo Open"
            android:textSize="20dp"
            android:background="#ffff0014"
            android:clickable="true"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/btnBalLLoaderServoCloseB"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Ball Loader&#10;Servo Close"
            android:textSize="20dp"
            android:background="#ffff0014"
            android:clickable="true"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/btnFireServoReloadG"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Fire Servo&#10;Reload"
            android:textSize="20dp"
            android:background="#ffff0014"
            android:clickable="true"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/btnFireServoFireF"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Fire Servo&#10;Fire"
            android:textSize="20dp"
            android:background="#ffff0014"
            android:clickable="true"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/btnWinchServoWindW"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Winch Servo &#10;Wind"
            android:textSize="20dp"
            android:background="#ffff0014"
            android:clickable="true"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/btnWinchServoUnwindV"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Winch Servo&#10;Unwind"
            android:textSize="20dp"
            android:background="#ffff0014"
            android:clickable="true"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/btnWinchServoStopS"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Winch Servo&#10;Stop"
            android:textSize="20dp"
            android:background="#ffff0014"
            android:clickable="true"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/btnConnect"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Connect"
            android:textSize="20dp"
            android:background="#ffff0014"
            android:clickable="true"
            android:layout_weight="0.5"/>

        </GridLayout>



</RelativeLayout><!-- From: file:/C:/Users/tanderson/AndroidstudioProjects/LauncherApp/app/src/main/res/layout/manual_control.xml -->